# ===========================================
# Support Agent v2 - Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# Add these to Vercel dashboard for production

# ----- Supabase -----
NEXT_PUBLIC_SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# ----- OpenAI -----
OPENAI_API_KEY=

# ----- Gmail OAuth (for monitoring) -----
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-app.vercel.app/api/auth/google/callback

# ----- HubSpot CRM -----
HUBSPOT_ACCESS_TOKEN=
HUBSPOT_ROB_OWNER_ID=           # Optional: Rob's owner ID for escalation assignment

# ----- Shopify (for customer verification) -----
SHOPIFY_STORE_DOMAIN=squarewheels.myshopify.com
SHOPIFY_ACCESS_TOKEN=
SHOPIFY_API_VERSION=2024-01     # Optional, defaults to 2024-01

# ----- Cron Security -----
CRON_SECRET=                    # Optional: Bearer token for /api/agent/poll

# ----- Optional: EngageBay CRM -----
# ENGAGEBAY_API_KEY=
# ENGAGEBAY_OWNER_EMAIL=
